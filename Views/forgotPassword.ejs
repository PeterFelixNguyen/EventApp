<% include layout %>
<script src="/Scripts/App/AngularControllers/forgotPasswordController.js"></script>
<script src="/Scripts/App/Classes/AppAccount.js"></script>
<script src="/Scripts/App/Classes/FormFieldValidator.js"></script>
<script src="/Scripts/App/Classes/FormValidationMessage.js"></script>
<script src="/Scripts/App/Classes/DbContext.js"></script>
<script>
    var AppAccount = new AppAccount();
</script>
<div ng-controller="ForgotPasswordController as c" class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
    <div>
        <h3>Forgot Password</h3>
        <table class="table table-striped">
            <tr>
                <td><b>Username</b></td>
                <td><input type="text" class="form-control" ng-model="AppAccount.username"></td>
                <td ng-show="IsUserNameFailure">{{userNameFailureMessage}}</td>
            </tr>
            <tr>
                <td><b>Email</b></td>
                <td><input type="text" class="form-control" ng-model="AppAccount.email"></td>
                <td ng-show="IsEmailFailure">{{emailFailureMessage}}</td>
            </tr>
        </table>
        <input type="button" class="btn" value="Reset Password" ng-click="c.ResetPassword(AppAccount.username, AppAccount.email)">
    </div>
</div>